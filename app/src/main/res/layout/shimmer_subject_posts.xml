<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/subjectTitle"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/material_margin_normal"
        android:background="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cardViewShimmerSubjectPosts"
        app:layout_constraintStart_toStartOf="@+id/cardViewShimmerSubjectPosts"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewShimmerSubjectPosts"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/material_margin_normal"
        app:cardCornerRadius="@dimen/material_margin_normal"
        android:layout_marginStart="@dimen/material_margin_normal"
        app:cardBackgroundColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subjectTitle">
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/postTitleShimmerSubjectPosts"
        android:layout_width="0dp"
        android:layout_height="@dimen/material_margin_normal"
        android:layout_marginTop="8dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/cardViewShimmerSubjectPosts"
        app:layout_constraintStart_toStartOf="@+id/cardViewShimmerSubjectPosts"
        app:layout_constraintTop_toBottomOf="@+id/cardViewShimmerSubjectPosts"
        />

    <TextView
        android:id="@+id/postCategoryShimmerSubject2"
        android:layout_width="70dp"
        android:layout_height="@dimen/material_margin_normal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/postTitleShimmerSubjectPosts"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/postTitleShimmerSubjectPosts"
        app:layout_constraintTop_toBottomOf="@+id/postTitleShimmerSubjectPosts"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewShimmerSubjectPosts2"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/material_margin_normal"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="@dimen/material_margin_normal"
        app:cardBackgroundColor="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/cardViewShimmerSubjectPosts"
        app:layout_constraintTop_toBottomOf="@id/subjectTitle">
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/postTitleShimmerSubjectPosts2"
        android:layout_width="0dp"
        android:layout_height="@dimen/material_margin_normal"
        android:layout_marginTop="8dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/cardViewShimmerSubjectPosts2"
        app:layout_constraintTop_toBottomOf="@+id/cardViewShimmerSubjectPosts"
        />

    <TextView
        android:id="@+id/postCategoryShimmerSubject3"
        android:layout_width="70dp"
        android:layout_height="@dimen/material_margin_normal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cardViewShimmerSubjectPosts2"
        app:layout_constraintTop_toBottomOf="@+id/postTitleShimmerSubjectPosts2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>